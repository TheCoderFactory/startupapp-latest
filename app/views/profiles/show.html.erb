<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-4">
            <%= image_tag @profile.picture, class: 'img-thumbnail', width: '150px' %>
          </div>
          <div class="col-md-8">
            <h1><%= @profile.first_name %> <%= @profile.last_name %></h1>
            <p><strong>Location:</strong> <%= @profile.city %>, <%= @profile.country %></p>
            <p><strong>Email:</strong> <%= @profile.user.email %></p>
            <p><strong>Phone:</strong> <%= @profile.phone %></p>
          </div>
        </div>
        <hr>
        <p class="lead"><%= @profile.tagline %></p>
        <p class="lead">About me:</p>
        <p><%= @profile.info %></p>
        <hr>
        
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <% if @businesses.any? %>
    <div class="panel panel-default">
      <div class="panel-body">
        <p class="lead">My businesses</p>
        <% @businesses.each do |business| %>
          <p class="lead"><i class="fa fa-building"></i> <%= link_to business.name, business %></p>
        <% end %>
      </div>
    </div>
    <% end %>
    <div class="panel panel-default">
      <!-- <div class="panel-heading">
        <p class="panel-title">This is a panel heading / title</p>
      </div> -->
      <div class="panel-body">
       
        <p class="lead">Follow me</p>
        <p class="lead"><i class="fa fa-globe"></i> 
          <%= link_to 'Blog', @profile.website %>
        </p>
        <p class="lead"><i class="fa fa-twitter-square"></i> <a href="https://twitter.com/<%= @profile.twitter %>" target="_blank"><%= @profile.twitter %></a></p>
        <p class="lead"><i class="fa fa-facebook-square"></i> <a href="http://facebook.com/<%= @profile.facebook %>" target="_blank">
        <%= @profile.facebook %></a></p>
        <p class="lead"><i class="fa fa-linkedin-square"></i> <a href="http://linkedin.com/<%= @profile.linkedin %>" target="_blank"><%= @profile.linkedin %></a></p>
        <p class="lead"><i class="fa fa-google-plus-square"></i> <a href="http://plus.google.com/<%= @profile.google_plus %>" target="_blank"><%= @profile.google_plus %></a> </p>
      </div>
    </div>
  </div>
</div>