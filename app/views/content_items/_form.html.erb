<%= simple_form_for(@content_item) do |f| %>
  <%= f.error_notification %>

  
  	<div class="form-group">
    	<%= f.input :title, input_html: { class: 'form-control'} %>
  	</div>
  	<div class="form-group">
    	<%= f.input :body, input_html: { class: 'form-control ckeditor'} %>
  	</div>
  

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

